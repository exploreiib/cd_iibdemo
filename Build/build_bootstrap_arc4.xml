<project name="IIB-CI-BOOTSTRAP" default="bootstrap" basedir="..">
  <description>IIB Continuous Integration Demo (bootstrap script)</description>

<property environment="env"/>

<propertyfile comment="Project configuration properties" file="="/var/continousbuild/utilities/Arc4/resources/Locations.properties"> 
<entry value="${env.WORKSPACE}../../jobs/${env.JOB_NAME}" key="projectlocation"/>
 <entry value="/var/continousbuild/codereview/reports" key="reportdir"/>
</propertyfile>


<target name="executeARC4"> 

<echo message="Jenkins workspace: ${env.WORKSPACE}"/>
    <echo message="Job directory: ${env.WORKSPACE}../../jobs/${env.JOB_NAME}"/>
    <echo message="Build data: ${env.WORKSPACE}../../jobs/${env.JOB_NAME}/build/${env.BUILD_ID}"/>

     <java fork="true" failonerror="yes" classname="arc4.UI.CodeReviewNoUI">
			 	<classpath>
	           			<pathelement location="/var/continousbuild/utilities/Arc4/Arc4.jar"/>
	           			<pathelement path="${java.class.path}"/>
	         		</classpath>
</java>

  </target>


</project>
